{
  "manifest_version": 3,
  "name": "Poker Equity Calculator",
  "version": "1.0.0",
  "description": "Real-time poker equity calculator for web poker games",
  
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_idle"
    }
  ],
  
  "action": {
    "default_popup": "popup.html",
    "default_title": "Poker Equity Calculator"
  },
  
  
  "background": {
    "service_worker": "background.js"
  },
  
  "web_accessible_resources": [
    {
      "resources": ["lib/*"],
      "matches": ["<all_urls>"]
    }
  ]
}